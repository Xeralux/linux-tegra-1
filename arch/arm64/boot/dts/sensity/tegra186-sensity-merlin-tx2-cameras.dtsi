#include "tegra186-camera-sensity-imx274.dtsi"

#define CAM0_RST_L	TEGRA_MAIN_GPIO(R, 5)
#define CAM0_PWDN	TEGRA_MAIN_GPIO(R, 0)
#define CAM1_RST_L	TEGRA_MAIN_GPIO(R, 1)
#define CAM1_PWDN	TEGRA_MAIN_GPIO(N, 2)

/ {
	tegra-camera-platform {
		/**
		* tpg_max_iso = <>;
		* Max iso bw for 6 streams of tpg
		* streams * nvcsi_freq * PG_bitrate / RG10 * BPP
		* 6 * 102Mhz * 32 bits/ 10 bits * 2 Bps
		* = 3916.8 MBps
		*/
		tpg_max_iso = <3916800>;
	};

	/* set camera gpio direction to output */
	gpio@2200000 {
		camera-control-output-low {
			gpio-hog;
			output-low;
			gpios = <CAM0_RST_L 0
				 CAM1_RST_L 0>;
			label = "cam0-rst",
				"cam1-rst";
		};
	};

	regulators {
		cam0_power: regulator@90 {
			compatible = "regulator-fixed";
			regulator-name = "cam0-regulator";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&tegra_main_gpio CAM0_PWDN GPIO_ACTIVE_HIGH>;
			enable-active-high;
			regulator-always-on;
			regulator-disable-on-shutdown;
			vin-supply = <&spmic_sd3>;
			consumers {
				c1 {
					regulator-consumer-supply = "vdd";
					regulator-consumer-device = "6-0018";
				};
				c2 {
					regulator-consumer-supply = "vdd";
					regulator-consumer-device = "6-001a";
				};
			};
		};
		cam1_power: regulator@91 {
			compatible = "regulator-fixed";
			regulator-name = "cam1-regulator";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&tegra_main_gpio CAM1_PWDN GPIO_ACTIVE_HIGH>;
			enable-active-high;
			regulator-always-on;
			regulator-disable-on-shutdown;
			vin-supply = <&spmic_sd3>;
			consumers {
				c1 {
					regulator-consumer-supply = "vdd";
					regulator-consumer-device = "2-0018";
				};
				c2 {
					regulator-consumer-supply = "vdd";
					regulator-consumer-device = "2-001a";
				};
			};
		};
	};

};
