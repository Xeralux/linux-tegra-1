#include "tegra210-camera-sensity-imx274.dtsi"

#define CAM0_RST_L	TEGRA_GPIO(S, 4)
#define CAM0_PWDN	TEGRA_GPIO(S, 7)
#define CAM1_RST_L	TEGRA_GPIO(S, 5)
#define CAM1_PWDN	TEGRA_GPIO(T, 0)

/{
	host1x {
		i2c@546c0000 {
			imx274_a@1a {
				clocks = <&tegra_car TEGRA210_CLK_CLK_OUT_3>;
				clock-names = "clk_out_3";
				mclk = "clk_out_3";
				reset-gpios = <&gpio CAM0_RST_L GPIO_ACTIVE_LOW>;
			};
			cam1_accel: lis2dh@18 {
				compatible = "st,lis2dh";
				reg = <0x18>;
				#io-channel-cells = <1>;
			};
		};
	};

	i2c@7000c500 {
		imx274_c@1a {
			clocks = <&tegra_car TEGRA210_CLK_CLK_OUT_3>;
			clock-names = "clk_out_3";
			mclk = "clk_out_3";
			reset-gpios = <&gpio CAM1_RST_L GPIO_ACTIVE_LOW>;
		};
		cam2_accel: lis2dh@18 {
			compatible = "st,lis2dh";
			reg = <0x18>;
			#io-channel-cells = <1>;
		};
	};

	gpio: gpio@6000d000 {
		camera-control-output-low {
			gpio-hog;
			output-low;
			gpios = <
				CAM0_RST_L 0
				CAM1_RST_L 0
				>;
			label = "cam0-rst", "cam1-rst";
		};
	};

	regulators {
		cam0_power: regulator@90 {
			compatible = "regulator-fixed";
			regulator-name = "cam0-regulator";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio CAM0_PWDN GPIO_ACTIVE_HIGH>;
			enable-active-high;
			regulator-always-on;
			regulator-disable-on-shutdown;
			vin-supply = <&vdd_3v3>;
			consumers {
				c1 {
					regulator-consumer-supply = "vdd";
					regulator-consumer-device = "6-0018";
				};
				c2 {
					regulator-consumer-supply = "vdd";
					regulator-consumer-device = "6-001a";
				};
			};
		};
		cam1_power: regulator@91 {
			compatible = "regulator-fixed";
			regulator-name = "cam1-regulator";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&gpio CAM1_PWDN GPIO_ACTIVE_HIGH>;
			enable-active-high;
			regulator-always-on;
			regulator-disable-on-shutdown;
			vin-supply = <&vdd_3v3>;
			consumers {
				c1 {
					regulator-consumer-supply = "vdd";
					regulator-consumer-device = "2-0018";
				};
				c2 {
					regulator-consumer-supply = "vdd";
					regulator-consumer-device = "2-001a";
				};
			};
		};
	};
};
